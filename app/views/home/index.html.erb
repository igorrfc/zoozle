<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="col-6 col-shift-3">
        <%= form_for @search, method: :get, remote: true, html: { class: 'search-form' } do |f| %>
          <%= f.text_field :description, id: 'search', class: 'input' %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
